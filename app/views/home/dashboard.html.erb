<div class="row">
    <h1 class="has-text-centered title is-size-3 has-background-danger-light pa10">
        Teaching Assistants report
    </h1>
    <div class="columns">
        <div class="column dashboard-column">
            <p class="title is-size-3">Doubts Asked</p>
            <p class="title is-3 has-text-grey	">
                <%= @doubts_asked  %>
            </p>
        </div>
        <div class="column dashboard-column">
            <p class="title is-size-3">Doubts Resolved</p>

            <p class="title is-3 has-text-grey	">
                <%= @doubts_resolved  %>
            </p>
        </div>
        <div class="column dashboard-column">
            <p class="title is-size-3">Doubts Escalated</p>

            <p class="title is-3 has-text-grey">
                <%= @doubts_escalated  %>
            </p>
        </div>
        <div class="column dashboard-column">
            <p class="title is-size-3">Average Doubt solving time</p>

            <p class="title is-3 has-text-grey	">
                <%= @average_doubt_solving_time  %>
                <small class="is-size-6">min.</small>
            </p>
        </div>

    </div>

</div>
<hr />
<div class="row">

    <table class="table is-fullwidth is-striped">
        <thead>
            <tr>
                <th>TA Name</th>
                <th># of times doubts Accepted</th>
                <th>Doubts Resolved</th>
                <th># of timed doubts Escalated</th>
                <th>Avg Doubt Activity Time <small>(min.)</small>
                </th>
            </tr>
        </thead>

        <tbody>
            <% @assistants.each do |assistant| %>
            <tr>
                <th>
                    <strong><%= assistant.user.username %></strong>
                </th>
                <td>
                    <%= assistant.doubts %>
                </td>
                <td><%= assistant.resolved %></td>
                <td><%= assistant.escalated %></td>
                <% if assistant.doubts != 0 %>
                <td><%= (assistant.total_time/assistant.doubts).to_i %></td>
                <% else %>
                <td> nil </td>
                <% end %>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>