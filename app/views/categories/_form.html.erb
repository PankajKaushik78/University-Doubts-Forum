<%= simple_form_for(@category) do |f| %>
<%= f.error_notification %>

<div class="field">
    <div class="control">
        <%= f.input :category, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }, placeholder: "Enter category name" %>
    </div>
</div>

<%= f.button :submit, class: 'btn-orange' %>
<% end %>