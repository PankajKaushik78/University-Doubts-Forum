<%= simple_form_for(@doubt) do |f| %>
<%= f.error_notification %>

<div class="field">
    <div class="control">
        <%= f.input :title, required: true, input_html: { class: 'input', required: true }, wrapper: false, label_html: { class: "label" } %>
    </div>
</div>

<div class="field">
    <div class="control">
        <%= f.input :description, required: 'required', input_html: { class: 'textarea' }, wrapper: false, label_html: { class: "label" } %>
    </div>
</div>

<div class="field mt20">
    <label class="label">Category</label>
    <div class="control has-icons-left">
        <span class="select">
            <%= f.input_field :category_id, collection:@categories.map { |c| [c.category, c.id] }, prompt: "Select Category" %>
        </span>
        <span class="icon is-small is-left">
            <i class="fa fa-tag"></i>
        </span>
    </div>
</div>

<div class="field mv30">
    <div class="control">
        <%= f.button :submit, class:"btn-orange" %>
    </div>
</div>

<% end %>