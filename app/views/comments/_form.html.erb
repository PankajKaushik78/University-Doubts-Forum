<%= simple_form_for([@doubt, @doubt.comments.build]) do |f| %>

<div class="field">
    <div class="control">
        <%= f.input :comment, input_html: { class: 'textarea', rows:2 }, wrapper: false, label_html: { class: 'label' } %>
    </div>
</div>

<%= f.button :submit, 'Leave a Comment', class:'btn-orange' %>

<% end %>