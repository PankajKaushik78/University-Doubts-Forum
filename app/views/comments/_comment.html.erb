<div class="box comment-card">
    <article class="media ">
        <div class="media-left">
            <figure class="image is-48x48">
                <%= gravatar_image_tag(comment.user.email, class: 'border-radius-50', size: 48, alt: comment.user.username) %>
            </figure>
        </div>
        <div class="media-content">
            <div class="content">
                <p>
                    <strong><%= comment.user.username %></strong> <small><%= time_ago_in_words(comment.created_at) %></small>
                    <br />
                    <%= markdown(comment.comment) %>
                </p>
            </div>

        </div>
        <% if comment_author(comment) || has_role?(:admin)%>
        <div class="media-right">
            <div class="level-item">
                <a>
                    <%= link_to edit_doubt_comment_path(comment.doubt, comment),  class:'button is-primary  is-light is-small'  do %>
                    <span class="icon is-small"><i class="fa fa-pencil"></i></span>
                    <% end %>
                </a>
                <a>
                    <%= button_to  [comment.doubt, comment],
                method: :delete, class:'button is-danger is-light is-small'  do %>
                    <span class="icon is-small"><i class="fa fa-trash"></i>
                        <% end %>
                </a>
            </div>
        </div>
        <% end %>
    </article>

</div>