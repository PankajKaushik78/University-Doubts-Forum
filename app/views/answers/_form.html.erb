<div class="column is-5  is-offset-1">
    <div class="row">
        <%= form_for([@doubt, @doubt.build_answer]) do |f| %>
        <p class="title is-3 has-text-grey"> Add an answer</p>
        <div class="field">
            <div class="control">
                <%= f.text_area :content, required: true, class: 'answer-input'%>
            </div>
        </div>

        <%= f.submit 'Add answer', class:'btn-orange' %>
        <hr />
        <%= link_to 'Escalate', escalate_doubt_path(@doubt), class:'button is-danger is-light' %>

        <% end %>
    </div>
    <div class="row mt50">
        <h3 class="title is-3 has-text-grey">Categories</h3>
        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% @categories.each do |c| %>
                <tr>
                    <th>
                        <strong><%= link_to c.category, c %></strong>
                    </th>

                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>