<div class="column is-5 is-offset-1">
    <%= form_for([@doubt, @doubt.answer]) do |f| %>
    <p class="title is-3 has-text-grey"> Update answer</p>
    <div class="field">
        <div class="control">
            <%= f.text_area :content, required: true, class: 'answer-input'%>
        </div>
    </div>

    <%= f.submit 'Update answer', class:'btn-orange' %>
    <hr />
    <%= link_to 'Escalate', escalate_doubt_path(@doubt), class:'button is-danger is-light' %>

    <% end %>
</div>