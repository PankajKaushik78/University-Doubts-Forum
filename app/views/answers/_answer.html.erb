<div class="column is-5 is-offset-1">
    <p class="title is-3 has-text-grey">
        Answer:
    </p>
    <div class="box doubt-answer">
        <article class="media">
            <div class="media-content">
                <div class="content">
                    <p>
                        <strong><%= answer.user.username %></strong> - <%= answer.user.designation.capitalize%> <small>
                            <span class="has-text-grey">(<%= time_ago_in_words(answer.created_at) %> ago)<span />
                        </small>
                        <br />
                        <%= markdown(answer.content) %>
                    </p>
                </div>

                <% if answer_author(answer) || has_role?(:admin) || (current_user && current_user.teacher?) %>
                <nav class="level is-mobile">
                    <div class="level-left">
                        <a class="level-item">
                            <%= link_to edit_doubt_answer_path(answer.doubt, answer) do %>
                            <span class="icon is-small"><i class="fa fa-pencil"></i></span>
                            <% end %>
                        </a>

                    </div>
                </nav>
            </div>
            <%= link_to 'Escalate', escalate_doubt_path(@doubt), class:'button is-outlined is-danger' %>
            <% end %>

        </article>
    </div>


    <div class="row mt50">
        <h3 class="title is-3 has-text-grey">Categories</h3>
        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% @categories.each do |c| %>
                <tr>
                    <th>
                        <strong><%= link_to c.category, c %></strong>
                    </th>

                </tr>
                <% end %>
            </tbody>
        </table>
    </div>

</div>